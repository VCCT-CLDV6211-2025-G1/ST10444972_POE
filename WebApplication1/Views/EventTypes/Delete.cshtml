@model WebApplication1.Models.EventType

@{
    ViewData["Title"] = "Delete Event Type";
}

<div class="container-fluid pt-4">
    <h1>Delete Event Type</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i>
            @TempData["ErrorMessage"]
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Warning:</strong> Are you sure you want to delete this event type? This action cannot be undone.
        </div>

        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Html.DisplayFor(model => model.Name)</h5>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </div>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        Usage Count
                    </div>
                    <div class="col-sm-9">
                        @(Model.Events?.Count ?? 0) events
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="EventTypeId" />
                    <div class="btn-group">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
